{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@api": ["api/index"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks/index"],
      "@shared/*": ["shared/*"],
      "@types-common/*": ["types/common/*"],
      "@types-component/*": ["types/component/*"],
      "@util": ["util/index"]
    }
  },
  "include": [
    "src"
  ],
  "compileOnSave": false
}